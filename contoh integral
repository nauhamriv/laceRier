Program LuasDaerah;
Uses crt;
Var
	m , n , e , d : real;
	Luas , Area : real;
	Ans : char;
	function Kurva( c: real ): real;
	Begin
		Kurva := c*c*c + c + 1 ;
	End;
Begin
	repeat
	repeat
		clrscr;
		write('Input m : '); readln(m); { Menginput batas bawah integral(m) }
		write('Input n ( m < n ) : '); readln(n); { Menginput batas atas integral (n) }
		write('Input d ( d > 0 ) : '); readln(d); { Menginput lebar partisi trapesium }
	until ( m >= 0 ) and ( m < n ) and ( d > 0 ); { Mengecek supaya syarat terpenuhi }
	Luas := 0;
	e := m + d; 
	while ( e <= n ) do { Batas pengulangan penjumlahan trapesium }
	begin
		Area := 0.5 * ( Kurva(m) + Kurva(e) ) * d; { Menghitung Luas Trapesium }
		Luas := Luas + Area; { Menghitung Luas di bawah kurva }
		m := e; { Next-element dari m }
		e := e + d; { Next-element dari e }
	end;
	writeln('Luas kurva di bawah y=1+x+x^3 dari ',m:0:0,' sampai ',n:0:0,' adalah ',Luas:0:2);
	write('Ingin menghitung ulang (y/n) ? '); readln(Ans);
	Until ( Ans = 'n');
End.
